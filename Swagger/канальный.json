{
  "openapi": "3.0.1",
  "info": {
    "title": "КР СТ Канальный уровень",
    "description": "API для работы с канальным уровнем",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8001/",
      "description": "Локальный сервер разработки"
    }
  ],
  "paths": {
    "/segments/code": {
      "post": {
        "tags": [
          "segments"
        ],
        "summary": "Создание сегмента по коду",
        "description": "Метод для создания сегмента по коду",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/segment"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ОК"
          },
          "400": {
            "description": "Неверный запрос"
          },
          "500": {
            "description": "Внутренняя ошибка сервера"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "segment": {
        "type": "object",
        "properties": {
          "segment": {
            "type": "string",
            "nullable": true,
            "example": "Пример сегмента",
            "description": "Сообщение сегмента"
          },
          "message_id": {
            "type": "integer",
            "nullable": true,
            "example": 1,
            "description": "Номер сообщения"
          },
          "segment_number": {
            "type": "integer",
            "nullable": true,
            "example": 2,
            "description": "Код сегмента"
          },
          "send_time": {
            "type": "string",
            "nullable": true,
            "example": "2006-01-02T15:04:05Z07:00",
            "description": "Время отправки"
          },
          "total_segment": {
            "type": "integer",
            "nullable": true,
            "example": 6,
            "description": "Общее количество сегментов сообщения"
          },
          "username": {
            "type": "string",
            "nullable": true,
            "example": "hello55",
            "description": "Имя пользователя"
          }
        },
        "additionalProperties": false,
        "required": [
          "segment"
        ]
      }
    }
  }
}